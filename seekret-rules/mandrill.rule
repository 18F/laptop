mandrill_smtp_credentials:
  match: (\"|')?(address(\"|'):)?(\"|')?(smtp.mandrillaapp.com)?(\"|')?(\"|')?(password(\"|')?:)\s*(\"|')?[A-Za-z0-9_]{21,}(\"|')?
  unmatch:
    - (\"|')?password\s*(:|=>|=)\s*ENV\[\'MANDRILL_API_KEY\'\]
    - (\"|')?password(\"|')\s*(:|=>|=)\s*(\"|')?\s*\[\'MANDRILL_PASSWORD\'\]